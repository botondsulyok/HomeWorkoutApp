<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/DoingExerciseStart">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/DoingExerciseEnd">

        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/tvDoingExerciseHeader"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <Constraint
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/vvDoingExercise"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:id="@+id/pulseCountDownDoingExercise" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/DoingExerciseEnd"
        app:constraintSetStart="@+id/DoingExerciseStart" />
</MotionScene>
